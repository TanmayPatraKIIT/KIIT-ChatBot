# .env file for KIIT ChatBot backend application

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=kiit_chatbot

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=0
REDIS_CELERY_DB=1

# LLM Configuration
LLM_PROVIDER=ollama
LLM_MODEL=llama3:8b
LLM_BASE_URL=http://localhost:11434
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.7

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
EMBEDDING_DEVICE=cpu

# FAISS
FAISS_INDEX_PATH=/data/faiss_index.bin
FAISS_MAPPING_PATH=/data/faiss_to_mongo_mapping.json

# Scraping
SCRAPE_INTERVAL_HOURS=6
SCRAPE_TIMEOUT_SECONDS=30
SCRAPE_MAX_RETRIES=3

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Logging
LOG_LEVEL=INFO
LOG_FILE=/logs/app.log

# Security
API_KEY=your_secret_api_key_for_admin_endpoints
CORS_ORIGINS=http://localhost:3000,https://kiitchatbot.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
